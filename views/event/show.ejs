<%- include('../partials/header.ejs') %>

  <main>
    <div class="mainInfo">
      <div class="btn-group-container">
        <h2>
          <%= event.topic %> - <%= event.title %>
        </h2>
        <%if(user==event.author._id){%>
          <form>
            <button type="submit" formmethod="GET" formaction="/events/<%= event.id %>/edit">
              <i class="bi bi-pen-fill"></i>
            </button>
            <button type="submit" formmethod="post" formaction="/events/<%= event.id %>?_method=DELETE">
              <i class="bi bi-trash-fill"></i>
            </button>
          </form>
          <%}%>

            <div class="eventimg-container">
              <img src="<%= event.image %>" alt="<%= event.title %>" />
            </div>

      </div>
    </div>

    <div class="eventInfo">

      <p>Host: <%= event.author.firstName %>
          <%= event.author.lastName %>
      </p>

      <p>Start: <%= event.startTime.toLocaleString() %>
      </p>
      <p>End: <%= event.endTime.toLocaleString() %>
      </p>

      <p>Location: <%= event.location %>
      </p>
      <p>Description:
        <%= event.description %>
      </p>
    </div>
    <%if(user !=event.author._id){%>
      <div class="rsvp">
        <p>RSVP</p>
        <form action="/events/<%= event._id %>/rsvp" method="POST">
          <button type="submit" name="status" value="YES" class="btn btn-success">Yes</button>
          <button type="submit" name="status" value="NO" class="btn btn-danger">No</button>
          <button type="submit" name="status" value="MAYBE" class="btn btn-primary">Maybe</button>
        </form>

      </div>
      <%}%>
        <p>Number of Attendees: <%= event.attendeeCount %>
        </p>



        </div>
  </main>
  <%- include('../partials/footer.ejs') %>